{
  "extends": "../../packages/typescript/tsconfig.base.json",
  "include": ["./**/*.ts*"],
  "compilerOptions": {
    // "baseUrl": ".",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES2020",
    "jsx": "react-jsx",
    // "allowImportingTsExtensions": true,
    "paths": {
      "@storybook/*": ["./.storybook/*"],

      "@authFeat/*": ["./src/features/auth/*"],
      "@chatFeat/*": ["./src/features/chat/*"],
      "@gamesFeat/*": ["./src/features/games/*"],

      "@components/*": ["./src/components/*"],

      "@hooks/*": ["./src/hooks/*"],

      "@redux/*": ["./src/redux/*"],

      "@services/*": ["./src/services/*"],

      "@typings/*": ["./src/typings/*"],

      "@utils/*": ["./src/utils/*"],

      "@views/*": ["./src/views/*"]
    }
  }
}
